{
  "paths": {
    "/api/comment": {
      "get": {
        "tags": ["Comment"],
        "summary": "List all comments",
        "description": "Returns an array of all comments. Each comment includes its replies and the user who created it (name and id).",
        "responses": {
          "200": {
            "description": "Array of comments",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommentArrayResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Comment"],
        "summary": "Create a new comment",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateCommentInput" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Comment created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommentResponse" }
              }
            }
          },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/api/comment/{commentId}": {
      "get": {
        "tags": ["Comment"],
        "summary": "Get a single comment (with user and replies)",
        "parameters": [
          {
            "in": "path",
            "name": "commentId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "cmdhso17i0001s767tfq913oh"
            },
            "description": "Comment cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Single comment found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommentResponse" }
              }
            }
          },
          "404": { "description": "Comment not found" }
        }
      },
      "patch": {
        "tags": ["Comment"],
        "summary": "Update a comment (owner only)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "commentId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "cmdhso17i0001s767tfq913oh"
            },
            "description": "Comment cuid"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UpdateCommentInput" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Comment updated",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommentResponse" }
              }
            }
          },
          "400": { "description": "Validation error" },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden: not a comment owner" },
          "404": { "description": "Comment not found" }
        }
      },
      "delete": {
        "tags": ["Comment"],
        "summary": "Delete a comment (owner only)",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "path",
            "name": "commentId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "cmdhso17i0001s767tfq913oh"
            },
            "description": "Comment cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CommentResponse" }
              }
            }
          },
          "401": { "description": "Unauthorized" },
          "403": { "description": "Forbidden: not a comment owner" },
          "404": { "description": "Comment not found" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Comment": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "example": "cmdhso17i0001s767tfq913oh" },
          "content": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "parentId": { "type": "string", "nullable": true, "example": null },
          "eventId": { "type": "string", "nullable": true, "example": null },
          "locationId": { "type": "string", "nullable": true, "example": null },
          "userId": {
            "type": "string",
            "example": "cmdhkf52o000008l4gcgahiwe"
          },
          "user": {
            "type": "object",
            "properties": {
              "name": { "type": "string", "example": "Alice Doe" },
              "id": { "type": "string" }
            }
          },
          "replies": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Comment" }
          }
        }
      },
      "CreateCommentInput": {
        "type": "object",
        "required": ["content"],
        "properties": {
          "content": {
            "type": "string",
            "minLength": 10,
            "example": "This is a very interesting event!"
          },
          "parentId": { "type": "string", "nullable": true, "example": null },
          "eventId": { "type": "string", "nullable": true, "example": null },
          "locationId": { "type": "string", "nullable": true, "example": null }
        }
      },
      "UpdateCommentInput": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "minLength": 10,
            "example": "Updated comment text!"
          },
          "parentId": { "type": "string", "nullable": true, "example": null },
          "eventId": { "type": "string", "nullable": true, "example": null },
          "locationId": { "type": "string", "nullable": true, "example": null }
        }
      },
      "CommentResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "message": {
            "type": "string",
            "example": "Comment created successfully"
          },
          "data": { "$ref": "#/components/schemas/Comment" }
        }
      },
      "CommentArrayResponse": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "message": {
            "type": "string",
            "example": "All comments fetched successfully"
          },
          "data": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/Comment" }
          }
        }
      }
    }
  }
}
